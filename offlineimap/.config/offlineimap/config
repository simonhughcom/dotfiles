# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = gmail_simonhmoore94
starttls= yes
ssl = yes


[Account gmail_simonhmoore94]
localrepository = gmail_simonhmoore94-local
remoterepository = gmail_simonhmoore94-remote

[Repository gmail_simonhmoore94-local]
type = Maildir
localfolders = ~/.mail/gmail_simonhmoore94

[Repository gmail_simonhmoore94-remote]
type = Gmail
remoteuser = simon.h.moore94@gmail.com
remotepass = 
ssl_version=tls1_2
sslcacertfile= /etc/ssl/certs/ca-certificates.crt
