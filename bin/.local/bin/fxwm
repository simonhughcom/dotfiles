#!/bin/sh

# FXWM
# Simon Hugh Moore
#
# A psudo window manager using fzf
# Switch, move and delete windows, desktops and monitors

export DISPLAY=:0

_dependency(){ command -v "$1" > /dev/null || { echo "error: "$1" not found"; exit 1; }; }
_dependency "wmctrl"
_dependency "xrandr"

_window(){
    windows="$( wmctrl -lxpG )"

    if [ "$1" = "-c" ]; then
        current_desktop="$( wmctrl -d | grep '*' | cut -d' ' -f1 )"
        windows="$( echo "$windows" | grep "^0x[^ ]*[[:space:]][[:space:]]*$current_desktop[[:space:]].*$" )"
    fi

    choice="$( echo "$windows" | fzf --with-nth=10.. --expect='alt-q,alt-Q,alt-m,alt-t,alt-c,alt-w,alt-p' )"
    key="$( echo "$choice" | head -n1 )"
    window="$( echo "$choice" | tail -n1 )"

    case "$key" in
        alt-q) wmctrl -ic "$window" ;;
        alt-Q) kill -s 9 "$( echo "$window" | awk '{print $3}' )" ;;
        alt-m) wmctrl -iR "$window" ;;
        alt-t) wmctrl -ir "$window" -T "$( echo "" | fzf --print-query --prompt="Title: " --pointer=" " )" ;;
        alt-c) echo "$window" | awk '{ print $8 }' ;;
        alt-w) echo "$window" | awk '{ print $1 }' ;;
        alt-p) echo "$window" | awk '{ print $3 }' ;;
        *) wmctrl -ia "$window" ;;
    esac
}

# TODO: Add delete and move commands
_desktop(){
    choice="$( wmctrl -d | fzf --with-nth=9 --expect='alt-t,alt-n,alt-m' )"
    key="$( echo "$choice" | head -n1 )"
    desktop="$( echo "$choice" | tail -n1 )"

    case "$key" in
        alt-t) echo "$desktop" | awk '{ print $9 }' ;;
        alt-n) echo "$desktop" | awk '{ print $1 }' ;;
        alt-m) wmctrl -ir "$( xdotool getwindowfocus )" -t "$desktop" ;;
        *) wmctrl -s "$desktop" ;;
    esac
}

# TODO: present list of monitors in fzf
_monitor(){
    xrandr --listmonitors
}

case "$1" in
    window) shift; _window "$@" ;;
    desktop) shift; _desktop "$@" ;;
    monitor) shift; _monitor "$@" ;;
esac
