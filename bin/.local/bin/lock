#!/bin/sh

# LOCK
# Simon Hugh Moore
#
# Lock the screen

# runtime dir.
runtime=/tmp/lock
# PID file
pid=$runtime/pid

# Script to run on exit
_cleanup() {
    rm -f "$pid"
    exit
}

# Make sure only one instants of lock is running.
if [ -f "$pid" ]; then
    echo "$(basename "$0") is already running, exiting..."
    exit 1
else
    # delete pid file when exiting
    trap _cleanup EXIT INT HUP TERM
    # create runtime dir
    mkdir -m 0700 -p "$runtime"
    echo $$ > "$pid"
fi

# run slock
DISPLAY=:0 /bin/slock
