# Basic Binds
super + shift + s
    sxhkdrestart &
super + Return
    $TERMINAL
super + x
    i3lock --color 475263
super + w
    $BROWSER -P firefox-profile
super + shift + w
    feh --bg-fill --randomize ~/Pictures/*/*-ls-*


# Dmenu
super + a
    dmenu_run
super + shift + q
    quitmenu
super + {_,shift +} c
    {clipmenu, clipdel -d ".*"}
super + s
    selsearchmenu
super + y
    ytmenu
super + numbersign
    bukumenu -t star
super + slash
    bukumenu -t - star,x,porn
super + shift + slash
    bukumenu -t x,porn - star
super + z
    bukumenu -p
super + e
    emojimenu
super + p
    pdfmenu



# Audio
super + m
    volume mute
super + v ; {0-9} ; {0-9} ; {0-9}
    volume {0-9}{0-9}{0-9}
super + {_,shift +,control +} equal
    volume +{5,20,1}
super + {_,shift +,control +} minus
    volume -{5,20,1}
XF86Audio{Raise,Lower}Volume {_,+ shift,+ control}
    volume {+,-}{5,20,1}

# Screen Brightness
XF86MonBrightness{Up,Down}
    xbacklight -{inc,dec} 20

# Screen Capture
Print
    shot
super + Print
    screenshotsmenu

