# Basic Binds
super + shift + s
    pkill -USR1 -x sxhkd
super + Return
    $TERMINAL
super + x
    lock
super + w
    $BROWSER -P privacy
super + shift + w
    feh --bg-fill --randomize ~/Pictures/*/*-ls-*
super + shift + m
    togglemouse

# Key Locks
{@}Caps_Lock
    melonbar
{@}Num_Lock
    melonbar
{@}Scroll_Lock
    melonbar

# Apps
super + t
    st -n htop -e htop

# Dmenu
super + a
    dmenu_run
ctrl + alt + Delete
    quitmenu
super + {_,shift +} c
    {clipmenu, clipdel -d ".*"}
super + s
    selsearchmenu
super + shift + backslash
    ytp
super + backslash
    xsel -b -c && sleep 0.2 && xdotool selectwindow click 3 sleep 0.2 key A && ytp
#super + shift + backslash
#    xdotool selectwindow key ctrl+c && ytp
super + shift + backslash
    streammenu
super + Prior
    bukumenu -t star - x,p
super + Menu
    bukumenu -t star - x,p
super + shift + Menu
    bukumenu -t - star,x,p
super + slash
    bukutagmenu
super + shift + slash
    bukumenu -t x,p
super + z ; {l,p,d,s,y,f,g}
    bukumenu -t {linux,p,docs,shop,yt,follow,git}
super + {_,shift +} period
    bukuadd{_,title}menu
super + e
    unicodemenu ~/.config/emoji
super + shift + e
    unicodemenu ~/.config/fontawesome
super + p
    pdfmenu
super + shift + p
    passmenu2 -t



# Audio
super + m
    volume mute
super + shift + s ; {0-9} ; {0-9}
    volume {0-9}{0-9}
super + {_,shift +,control +} equal
    volume +{5,20,1}
super + {_,shift +,control +} minus
    volume -{5,20,1}
# XF86 Audio
XF86AudioMute
    volume mute
XF86Audio{Raise,Lower}Volume {_,+ shift,+ control}
    volume {+,-}{5,20,1}
