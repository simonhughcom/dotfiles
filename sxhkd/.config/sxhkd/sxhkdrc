# Basic Binds
super + shift + s
    pkill -USR1 -x sxhkd
super + {_,shift +} Return
    $TERMINAL {_,-e nnn}
super + x
    lock
super + shift + w
    feh --bg-fill --randomize ~/Pictures/*/*-ls-*
super + space; m
    togglemouse

# Key Locks
{@}Caps_Lock
    melonbar update keystate
{@}Num_Lock
    melonbar update keystate
{@}Scroll_Lock
    melonbar update keystate

# Apps
super + t
    $TERMINAL -c htop -n htop -e htop
super + w
    $BROWSER
super + p
    $TERMINAL -c pulsemixer -n pulsemixer -e pulsemixer

super + alt + w; {c,g,t} 
    {chromium,google-chrome-stable,tor-browser}
super + alt + v
    virt-manager
super + alt + s
    steam
super + alt + l
    libreoffice
super + alt + g
    gimp
super + alt + a
    audacity
super + alt + o
    obs
super + alt + c; {e,f}
    unicodemenu ~/.config/{emoji,fontawesome}
super + alt + p
    pdfmenu

# Dmenu
super + a
    dmenu_run
ctrl + alt + Delete
    powermenu
super + {_,shift +} c
    {clipmenu, clipdel -d ".*"}
super + s
    selsearchmenu
super + shift + backslash
    streammenu
super + Prior
    bukumenu -t star - x,p
super + Menu
    bukumenu -t star - x,p
super + shift + Menu
    bukumenu -t - star,x,p
super + slash
    bukutagmenu
super + shift + slash
    bukumenu -t x,p
super + z ; {l,p,d,s,y,f,g}
    bukumenu -t {linux,p,docs,shop,yt,follow,git}
super + {_,shift +} period
    bukuadd{_,title}menu
super + shift + p
    pass menu
super + {_,shift +} h
    mpv-history -{t,p} -d



# Audio
super + m
    volume mute
super + {control +,shift +} m; {0-9}
    volume {_,1}{0-9}0
super + {_,shift +,control +} equal
    volume +{5,20,1}
super + {_,shift +,control +} minus
    volume -{5,20,1}
# XF86 Audio
XF86AudioMute
    volume mute
XF86Audio{Raise,Lower}Volume {_,+ shift,+ control}
    volume {+,-}{5,20,1}
#XF86Audio{Play,Pause}
#    playerctl {play,pause}
#XF86Audio{Next,Prev}
#    playerctl {next,prev}


# Screen Brightness
super + shift + b ; {0-9}
    xbacklight -set {0-9}0
super + shift + b ; {minus,equal}
    xbacklight {-,+} 5 
XF86MonBrightness{Up,Down}
    xbacklight -{inc,dec} 20

# Screen Capture
Print
    shot
super + Print
    screenshotsmenu
super + shift + Print
    shotmenu
super + F12
    recordmenu listmenu
super + shift + F12
    recordmenu

# F Keys
