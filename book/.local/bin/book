#!/bin/sh

# BOOK
# Simon Hugh Moore
#
# Store and search for bookmarks

bookmark_dir=~/Documents/notes/bookmarks

_files(){
    fd .md --base-directory=$bookmark_dir
}

_main(){
   _files 
}


while test $# -gt 0; do
    case "$1" in
        # -h|--help) echo "$__usage"; exit ;;
        -t|--title) shift; title=${1} ;;
        -f|--file) shift; file=${1} ;;
        *) file="$1" ;;
    esac
    shift
done

if [ -z $file ]; then
    echo "Usage: $( basename $0 ) <file>"
	exit 1
fi

_main
