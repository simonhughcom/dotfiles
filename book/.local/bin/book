#!/bin/sh

# BOOK
# Simon Hugh Moore
#
# Store and search for bookmarks

bookmark_dir=~/Documents/notes/bookmarks
cd $bookmark_dir

__usage="
Usage: $(basename "$0") [OPTIONS]
Store and search for bookmarks

Options:
  -a, --add <url> [file] [tag]       Add bookmark
  -e, --edit                         Open bookmark file in editor
  -l, --list [OPTIONS]               List bookmarks, files, tags
  -m, --menu [OPTIONS]               Find bookmarks using FZF
  -h, --help                         Print this help message
"

_get_html_title(){
    curl --silent --fail "$1" | awk -vRS="</title>" '/<title.*>/{gsub(/.*<title.*>|\n+/,"");print;exit}' | recode -q html..utf8
}

_add(){
    url="$1"
    file="$2"
    header="${3:-Misc}"
    title="$( _get_html_title "$url" )"
    [ "$title" = "" ] && title="$url"

    grep -c "##[[:space:]]$header" "$file" || echo "\n## $header" >> "$file"

    sed "/^##[[:space:]]$header$/a - [$title]($url)" "$file"
}

_list_files(){
    find . -type f -name "*.md" -printf "%P\n" | sed 's/\.md$//'
}

_list_bookmarks(){
    grep -hr --include="*.md" "^-[[:space:]]\[.*\](.*)" | sed 's/^-[[:space:]]*//'
}

_list_tags(){
    grep -r --include="*.md" "^##.*$" | sed 's|\.md:##[[:space:]]*| #|g'
}

_list(){
    case "$1" in
        all) _list_bookmarks ;;
        files) _list_files ;;
        tags) _list_tags ;;
        *) _list_bookmarks ;;
    esac
}

_bm_from_tag(){ sed -n "/^## ${1}$/,/##.*$/{/^-[[:space:]]/p}" | sed 's/-[[:space:]]*//'; }

_tags_menu(){
    choice="$( _list_tags | fzf )"
    file="$(  echo "$choice" | awk '{print $1}' )"
    tag="$(  echo "$choice" | awk -F '#' '{print $2}' )"
    cat "${file}.md" | _bm_from_tag "$tag"
}

_menu(){
    case "$1" in
        all) _list_bookmarks | fzf ;;
        tags) _tags_menu ;;
        *) _list_bookmarks | fzf ;;
    esac
}

_main(){
   _files 
}


while test $# -gt 0; do
    case "$1" in
        -h|--help) echo "$__usage"; exit ;;
        -a|--add) shift; _add $@; exit ;;
        -e|--edit) shift; title=${1} ;;
        -l|--list) shift; _list $@; exit ;;
        -m|--menu) shift; _menu $@; exit ;;
        *) file="$1" ;;
    esac
    shift
done

if [ -z $file ]; then
    echo "Usage: $( basename $0 ) <file>"
	exit 1
fi

_main
