#!/bin/sh
#
# AUTHOR: Simon H Moore
#
# DATE: Wed Oct 15 2020
#
# DESC: Elvi to search thepiratebay
# elvis: thepiratebay		-- Search thepiratebay (www.thepiratebay.org)
. surfraw || exit 1

w3_usage_hook () {
    cat <<EOF
Usage: $w3_argv0 [options] [search words]...
Description:
  Search thepiratebay (thepiratebay.org) for torrents
EOF
    w3_global_usage
}

w3_config
w3_parse_args "$@"
if test -z "$w3_args"; then
    w3_browse_url "https://thepiratebay.org"
else
    escaped_args=`w3_url_of_arg $w3_args`
    w3_browse_url "https://thepiratebay.org/search.php?q=${escaped_args}"
fi
