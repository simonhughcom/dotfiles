#!/bin/sh

# EXTERNAL_RULES
# Simon Hugh Moore
#
# Configure bspwm nodes.

wid=$1
class=$2
instance=$3

case "$instance" in
    dropdown*)
        xdotool windowmove $wid 0 -10
        xdotool windowsize $wid 100% 300

        echo "state=floating"
        echo "sticky=on"
        echo "border=off"
    ;;
    window*)
        xdotool windowmove $wid 0 -10
        
        # get local of global window count
        if [ "$instance" = "window-all" ]; then
        window_count=$( bspc query -N -n .window | wc -l )
        else
        window_count=$( bspc query -N -n .window.local | wc -l )
        fi

        # The more windows the larger the window height
        window_height=$(( ($window_count * 38) + 100 ))
        [ $window_height -lt 150 ] && window_height=150
        [ $window_height -gt 500 ] && window_height=500
        xdotool windowsize $wid 100% "$window_height"

        echo "state=floating"
        echo "sticky=on"
        echo "border=off"
    ;;
    powermenu)
        xdotool windowmove $wid 35% 35%
        xdotool windowsize $wid 500 300
        echo "state=floating"
        echo "sticky=on"
        echo "border=off"
    ;;
    calc)
        xdotool windowmove $wid 25% 35%
        xdotool windowsize $wid 1200 400

        echo "state=floating"
        echo "sticky=on"
        # echo "hidden=off"
    ;;
    *_menu)
        xdotool windowmove $wid 30% 30%
        xdotool windowsize $wid 800 400

        echo "state=floating"
        echo "sticky=on"
        echo "border=off"
    ;;
esac
