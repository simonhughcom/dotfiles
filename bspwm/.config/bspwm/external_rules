#!/bin/sh

# EXTERNAL_RULES
# Simon Hugh Moore
#
# Configure bspwm nodes.

wid=$1
class=$2
instance=$3

case "$instance" in
    dropdown*)
        xdotool windowmove $wid 0 -10
        xdotool windowsize $wid 100% 210

        echo "state=floating"
        echo "sticky=on"
        echo "border=off"
    ;;
    powermenu)
        xdotool windowmove $wid 5 5
        xdotool windowsize $wid 280 280
        echo "state=floating"
        echo "sticky=on"
        echo "border=off"
    ;;
    calc)
        xdotool windowmove $wid 25% 35%
        xdotool windowsize $wid 1200 400

        echo "state=floating"
        echo "sticky=on"
        # echo "hidden=off"
    ;;
esac
