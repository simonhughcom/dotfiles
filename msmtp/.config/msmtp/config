# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.local/share/msmtp/msmtp.log

#####################
### simonhugh.xyz ###
#####################

account         mailbox
host            smtp.mailbox.org
port            465
from            simonhugh@mailbox.org
user            simonhugh@mailbox.org
tls_starttls    off
passwordeval    "pass simonhugh.xyz/mailbox | head -n1"

# simon
account         simon
host            smtp.mailbox.org
port            465
from            simon@simonhugh.xyz
user            simonhugh@mailbox.org
tls_starttls    off
passwordeval    "pass simonhugh.xyz/mailbox | head -n1"

# Gmail
account        mainGM
host           smtp.gmail.com
port           587
from           simon.h.moore94@gmail.com
user           simon.h.moore94@gmail.com
passwordeval   "pass get mutt google/main"

# Set a default account
account default : simon

